<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rtr.urbanhack.urbanhack.fragments.NavigationDrawerFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/nav_drawer_item_padding">

        <include layout="@layout/basic_profile"></include>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/nav_drawer_color"
            android:id="@+id/rv_drawer_menu_list">

        </android.support.v7.widget.RecyclerView>


    </LinearLayout>

</RelativeLayout>
