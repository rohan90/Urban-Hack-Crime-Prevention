<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="urbanhack.reportapp.LoginActivty">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="280dp"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:id="@+id/iv_login"
        android:layout_centerHorizontal="true"
        android:src="@drawable/login"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neighbourhood Watch"
        android:textSize="22sp"
        android:id="@+id/tv_login_first"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/iv_login"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contributing in preventing crime"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_very_light"
        android:layout_below="@+id/tv_login_first"
        android:layout_marginBottom="30dp"
        android:id="@+id/tv_login_second"
        />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/btn_fb_login"
        android:scaleType="fitXY"
        android:background="@color/white"
        android:src="@drawable/btn_and_logo_fb"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_login_second"
        />
    </RelativeLayout>

</RelativeLayout>
