<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:background="@android:color/transparent"
    card_view:cardCornerRadius="14dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:id="@+id/iv_card_main_image"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/card_placeholder" />

                //TODO

                <ImageView
                    android:id="@+id/iv_card_interested_stamp"
                    android:layout_width="167dp"
                    android:layout_height="114dp"
                    android:layout_alignParentLeft="true"
                    android:padding="20dp"
                    android:scaleType="fitXY" />

                //TODO

                <ImageView
                    android:id="@+id/iv_card_not_interested_stamp"
                    android:layout_width="167dp"
                    android:layout_height="114dp"
                    android:layout_alignParentRight="true"
                    android:padding="20dp"
                    android:scaleType="fitXY" />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/black"
                android:alpha="0.50"
                android:layout_alignParentBottom="true">

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_report_card_bottom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/iv_profile_pic"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:src="@drawable/icon_profile_placeholder"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="8dp"
                    app:border_color="#ccc"
                    app:border_width="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    >

                    <TextView
                        android:id="@+id/tv_card_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:textSize="18sp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tv_card_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textSize="@dimen/text_size_cards"
                        android:textColor="@color/white"/>


                    <TextView
                        android:id="@+id/tv_card_postedon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Posted On"
                        android:textSize="@dimen/text_size_cards"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/tv_card_authorname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Poster Name"
                        android:textSize="@dimen/text_size_cards"
                        android:textColor="@color/white"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>